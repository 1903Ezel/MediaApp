{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "vite.config.js", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/" }
  ],
  "outputDirectory": "dist",
  "framework": "vite",
  "cleanUrls": true,
  "trailingSlash": false,
  "cache": {
    "headers": [
      {
        "source": "/sw.js",
        "headers": [
          { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate, proxy-revalidate" }
        ]
      }
    ]
  }
}
